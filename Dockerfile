# ??????? ???? .NET 6 ????? ?????
FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

# ??????? ???? .NET 6 SDK ?????? ???????
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["elsaeedTea.csproj", "./"]
RUN dotnet restore "./elsaeedTea.csproj"
COPY . .
WORKDIR "/src/"
RUN dotnet build "./elsaeedTea.csproj" -c Release -o /app/build

# ????? ???? ????? ?????
FROM build AS publish
RUN dotnet publish "./elsaeedTea.csproj" -c Release -o /app/publish

# ??????? ?????? ???????? ?????? ???????
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "elsaeedTea.dll"]
